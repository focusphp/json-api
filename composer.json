{
    "name": "focus/json-api",
    "description": "A collection of tools for working with JSON:API data.",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Woody Gilk",
            "email": "woody@shadowhand.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "focus/data": "^2.0",
        "psr/http-message": "^1.0 || ^2.0"
    },
    "require-dev": {
        "doctrine/coding-standard": "^12.0",
        "ergebnis/composer-normalize": "^2.39",
        "nyholm/psr7": "^1.8",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.4"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "Focus\\JsonApi\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Focus\\JsonApi\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true
        },
        "sort-packages": true
    },
    "scripts": {
        "analyze": "phpstan",
        "check": "phpcs",
        "test": "phpunit"
    },
    "tags": [
        "json",
        "data",
        "api",
        "json:api",
        "structured"
    ]
}
